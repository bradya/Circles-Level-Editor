package visual{	import visual.Tile;	import flash.display.Sprite;	import flash.display.BitmapData;		public class Screen extends Sprite{				private var _screenArray:Array;		private var _tiles:Array;				public function Screen(screenArray:Array, tileset:BitmapData){			_screenArray = screenArray;			_tiles = new Array();			var tile:Tile;			var row:Array;						// create matrix			for(var i:uint=0;i<_screenArray.length;i++){				row = _screenArray[i] as Array;				for(var j:uint=0;j<row.length;j++){					// create a new tile and push it to _tiles					//Tile(typeX:uint,typeY:uint,locationX:uint,locationY:uint,tileset:BitmapData)					tile = new Tile(row[j],j,i,tileset)					addChild(tile)					_tiles.push(tile);				}				}				}				//let other classes get the tiles array. 		public function get allTiles():Array{			return _tiles;		}	}}