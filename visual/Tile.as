package visual{	import flash.display.Sprite;	import flash.display.BitmapData;	import flash.geom.*;		public class Tile extends Sprite{				private var _type:uint;		private var _locationX:uint;		private var _locationY:uint;				// colors of tiles		static private var TILE_TYPES:Array = [0xDDDDDD,0xFF00AA,0xCC00CC,0xCCCC00,0x3300FF];		private const TILE_SIZE:uint = 16;					public function Tile(typePoint:Point,locationX:uint,locationY:uint,tileset:BitmapData){			// get parameters 			_type = type;			_locationX = locationX;			_locationY = locationY;			//draw a square 			graphics.lineStyle(1,0x000000,0.2);			// different color by type parameter 			//graphics.beginFill(	TILE_TYPES[_type],1);			var cropArea:Rectangle = new Rectangle( typePoint.x*16, typePoint.y*16, TILE_SIZE, TILE_SIZE);			var destPoint:Point = new Point( 0, 0 );						var bmp = new BitmapData(TILE_SIZE, TILE_SIZE);			bmp.copyPixels(tileset, cropArea, destPoint);			graphics.beginBitmapFill(bmp);			graphics.drawRect(0,0,TILE_SIZE,TILE_SIZE);			graphics.endFill();			x=TILE_SIZE*_locationX;			y=TILE_SIZE*_locationY;		}				public function get type():uint{			return _type;		}		public function get locationX():uint{			return _locationX;		}		public function get locationY():uint{			return _locationY;		}	}}